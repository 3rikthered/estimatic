<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.error_notification %>


<div class = "center">

  <div class="form-inputs">
    <div class = "box has-background-dark ">
      <h2 class="is-size-5 has-text-grey">Name:</h2>
      <div class = "control">
        <%= f.input_field :name,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "name" },
                    class: "input is-success has-background-dark has-text-grey" %>
      </div>
      <h2 class="is-size-5 has-text-grey">Email:</h2>
      <div class = "control">
        <%= f.input_field :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    class: "input is-success has-background-dark has-text-grey" %>
      </div>
      <h2 class="is-size-5 has-text-grey">Password:</h2>
      <div class = "control">
        <%= f.input_field :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" },
                    class: "input is-success has-background-dark has-text-grey" %>
      </div>
      <h2 class="is-size-5 has-text-grey">Confirm Password:</h2>
      <div class = "control">
        <%= f.input_field :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    class: "input is-success has-background-dark has-text-grey" %>
      </div>
      <br>
      <div class = "buttons are-medium">
        <div class = "form-actions">
          <p class = "is-size-6"><%= f.button :submit, "Sign up", class: "button is-success" %></p>
        </div>
      </div>
    </div>
</div>
<br>
<%= render "devise/shared/links" %>

<% end %>
