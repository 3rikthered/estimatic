<%= simple_form_for(estimate) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="project-padding">
    <div class="box has-box-shadow has-background-dark">
      <div class="form-inputs">
        <%= f.input :case_best, required: true, autofocus: true, input_html: {autocomplete: "Best Case"} %>
      </div>

      <div class="form-inputs">
        <%= f.input :case_worst, required: true, autofocus: true, input_html: {autocomplete: "Best Case"} %>
      </div>

      <div class="form-inputs">
        <%= f.input :case_expected, required: true, autofocus: true, input_html: {autocomplete: "Best Case"} %>
      </div>

        <div class="content">
          <%= f.button :submit, class: 'button is-success has-box-shadow' %>
          <%= link_to 'Back', projects_path, class: 'button is-danger has-box-shadow' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
