<p id="notice"><%= notice %></p>

<div class = "project-padding">
  <div class = "description-padding">
    <div class = "box has-background-dark">
      <div class = "content">
        <h1 class = "title is-5 has-text-success has-text-weight-light">
          Project Description:
        </h1>
        <p class = "has-text-success is-italic">
          <%= @project.description %>
        </p>
      </div>
    </div>
  </div>


<nav class="navbar has-background-black-ter is-fixed-bottom">
  <div class = "navbar-end">
    <h1 class = "navbar-item is-size-2 is-italic has-text-success has-text-weight-light">
      <%= @project.project %> | owned by <%= @project.user.email %>
    </h1>
    <div class = buttons are-small">
      <button class = "button is-success is-outlined">
        <%= link_to 'Back', projects_path %>
      </button>
      <button class = "button is-success is-outlined">
        <%= link_to 'Edit', edit_project_path(@project) %>
      </button>
      <button class = "button is-success is-outlined">
        <%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' } %>
      </button>
      <p> </p>
    </div>
  </div>
</div>
