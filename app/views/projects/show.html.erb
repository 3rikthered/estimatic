<p id="notice"><%= notice %></p>

<div class = "project-padding">
  <div class = "description-padding">
    <div class = "box has-background-dark has-box-shadow">
      <div class = "content">
        <h1 class = "title is-5 has-text-success has-text-weight-light">
          Starts on: <%= @project.startdate %>
        </h1>
        <p class = "is-7 has-text-success">
          <%= @project.description %>
        </p>
      </div>
    </div>
  </div>


<nav class="navbar has-background-black-ter is-fixed-bottom">
  <div class = "navbar-end">
    <h1 class = "navbar-item is-size-2 is-italic has-text-success has-text-weight-light">
      <%= @project.project %> | owned by <%= @project.user.name %>
    </h1>
    <div class = buttons are-small">
      <%= link_to 'Back', projects_path, class: 'button is-success is-outlined' %>
      <%= link_to 'Edit', edit_project_path(@project), class: 'button is-success is-outlined' %>
      <%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-success is-outlined' %>
      <br>
    </div>
  </div>
</div>
